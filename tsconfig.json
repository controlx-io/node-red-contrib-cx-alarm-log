    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "removeComments": true,
    "baseUrl": "."
  },
  "assets": [
    "nodes-src/**/*.json"
  ],
  "include": [
    "nodes/**/*"
  ]
}